<h1>Routine Details</h1>

<div>
    <p>Routine Name: {{routine.routineName}}</p>
    <p>Total Duration: {{routine.duration}}</p>

    {{#each routine.exercises}}
        <a href="/workouts/details/{{_id}}"><p>{{exerciseName}}</p></a>
        <p>Reps: {{reps}}</p>
    {{/each}}
    {{!-- <p>Exercises: {{exercises}}</p> --}}
    <br>
    <p>Added by: {{routine.username.username}}</p>
</div>

<hr>

{{#if isOwner}}

<div>
    <form action="/routines/edit/{{routine._id}}" method="get">
        <button type="submit">Edit Workout Routine</button>
    </form>
    <form action="/routines/delete/{{routine._id}}" method="get">
        <button type="submit">Delete Workout Routine</button>
    </form>
</div>

{{/if}}