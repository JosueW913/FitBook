<h1 class="m-3 fw-bold text-white">Exercise Details</h2>

{{!-- <img src="{{imageUrl}}" alt="workout"> --}}
<div>
    <p>Exercise Type: {{exercise.workoutType}}</p>
    <p>Exercise: {{exercise.exerciseName}}</p>
    <p>Instructions: {{exercise.instructions}}</p>
    <p>Reps: {{exercise.reps}}</p>
    <p>Sets: {{exercise.sets}}</p>
    <p>Workout Duration: {{exercise.duration}} minutes</p>
    <br>
    <p>Added by: {{exercise.username.username}}</p>
</div>

{{#if routines.0._id}}

<form action="/routines/add-exercise/{{exercise._id}}/{{exercise.duration}}" method="post">
    <select name="routineName" id="routineName">
        {{#each routines}}
            <option value="{{_id}}">{{routineName}}</option>
        {{/each}}
    </select>
    <button class="m-1 btn btn-light btn-outline-dark" type="submit">Add to Routine</button>
</form>

{{else}}

    <p>Create routine in your profile to add exercise.</p>
    <a href="/users/profile">Profile</a>

{{/if}}


<hr>

<div class="d-flex">
    <form action="/workouts/edit/{{exercise._id}}" method="get">
        <button class="m-1 btn btn-light btn-outline-dark" type="submit">Edit Exercise</button>
    </form>
    <form action="/workouts/delete/{{exercise._id}}" method="get">
        <button class="m-1 btn btn-dark btn-outline-light" type="submit">Delete Exercise</button>
    </form>
</div>
