<div class="container">
    <h1 class="m-3 fw-bold text-white">Add Exercise</h2>

    <form action="/workouts/create" method="post">

        <label for="workoutType">Workout Type</label>
        <select id="workoutType" type="text" name="workoutType">
                <option value="chest">Chest</option>
                <option value="back">Back</option>
                <option value="arms">Arms</option>
                <option value="legs">Legs</option>
                <option value="abs">Abs</option>
                <option value="cardio">Cardio</option>
        </select>
        <br><br><br>

        <label class="form-label" for="exerciseName">Exercise Name</label>
        <input class="form-control" id="exerciseName" type="text" name="exerciseName">
        <br>

        <label class="form-label" for="instructions">Instructions</label>
        <input class="form-control" id="instructions" type="text" name="instructions">
        <br>

        <label class="form-label" for="reps">Exercise Reps</label>
        <input class="form-control" id="reps" type="text" name="reps">
        <br>

        <label class="form-label" for="sets">Workout Sets</label>
        <input class="form-control" id="sets" type="text" name="sets">
        <br>

        <label class="form-label" for="duration">Approx. Duration (minutes)</label>
        <input class="form-control" id="duration" type="text" name="duration">

        <button class="m-1 btn btn-light btn-outline-dark" type="submit">Submit Exercise</button>

    </form>
</div>